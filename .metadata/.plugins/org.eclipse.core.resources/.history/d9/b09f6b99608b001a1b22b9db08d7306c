<script>

function deleterec(no){
	jQuery(function($) {
		alert(no);
		$.ajax({
			  url: "UserDetails_Display",
			  type: "post",
			  data: {
                    id : no
                },
                success: function(response){
                	if (response=='success');
                		location.reload();
                   },
			error:function(){
			      alert("failure");
			     
			  }   
			}); 

	
	}); 
   }	


	

	

</script>
